<Window x:Class="MVVMbinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMbinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonChA" Content="Change to A" HorizontalAlignment="Left" Margin="24,24,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-0.013,-1.5" Height="33" Click="ButtonChA_Click"/>
        <Button x:Name="ButtonChB" Content="Change to B" HorizontalAlignment="Left" Margin="24,81,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.04,0.45" Height="33" Click="ButtonChB_Click"/>
        <Label Content="{Binding Status}" HorizontalAlignment="Left" Margin="144,27,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
